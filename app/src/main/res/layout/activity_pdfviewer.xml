    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_panel"
        android:layout_weight="0.32"
        android:paddingTop="5dip"
        android:id="@+id/Rlayout"
        android:scrollIndicators="top|left|bottom|start|end|right">

    </LinearLayout>


    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingTop="5dip"
        android:paddingRight="10dip"
        android:paddingBottom="4dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Signature"
            android:id="@+id/pdfVselectsignimageButton"
            android:src="@drawable/select_signature"
            android:layout_gravity="center" />
        <Button
            style="?android:attr/buttonBarButtonStyle"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Signature"
            android:id="@+id/signimage"
            android:scaleType="fitCenter"
             android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
              android:layout_gravity="center" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign ALL"
            android:id="@+id/pdfVsignallbutton"
            android:onClick="SignAllDocument"
            android:layout_gravity="center_vertical" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign"
            android:id="@+id/pdfVsignbutton"
            android:layout_gravity="center"
            android:onClick="SignDocument"
            android:layout_marginRight="5dp" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Share"
            android:id="@+id/pdfVshareimageButton"
            android:layout_gravity="center" />




    </LinearLayout>
</RelativeLayout>